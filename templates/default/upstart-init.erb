description "Hubot, a chatops bot"

start on started networking and runlevel [2345]
stop on runlevel [016]

setuid <%= node['hubot']['user'] %>
chdir <%= node['hubot']['install_dir'] %>
console log

env PATH="/opt/hubot/node_modules/.bin:/opt/hubot/node_modules/hubot/node_modules/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
<% node['hubot']['config'].each do |name, value| -%>
env <%= name.upcase %>="<%= value %>"
<% end -%>


script
  echo $$ > /var/run/hubot/<%= node['hubot']['name'] %>.pid
  /opt/hubot/bin/hubot --name <%= node['hubot']['name'] %> --adapter <%= node['hubot']['adapter'] %> >> /var/log/hubot/<%= node['hubot']['name'] %>.log 2>&1
end script

post-stop script
  rm -f /var/run/hubot/<%= node['hubot']['name'] %>.pid
end script

